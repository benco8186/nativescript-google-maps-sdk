{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2015",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "lib": [
        "es2017",
          "dom",
          "es6"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ]
        }
    },
    "include": [
        "./"
    ],
    "exclude": [
        "node_modules",
        "platforms",
        "demo",
        "ng-demo"
    ]
}
